<div class="banner fadeIn">
  <div class="container">
    <h1>Whereâ€™s The Coffee?</h1>
    <%=  link_to 'Add a new shop' , new_shop_path, class: "btn btn-info" %>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @shops.each do |shop| %>
      <div class="col-lg-6">
        <% if shop.photo.attached? %>
          <%= link_to shop_path(shop) do%>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path shop.photo.key, height: 300, crop: :fill %>')">
              <h2><%= shop.name %></h2>
            </div>
          <%end%>
        <% else %>
          <div class="card-category" style="background-color">
            <h2><%= shop.name %></h2>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
