<div class="banner fadeIn">
  <div class="container">
    <h1>Coffee Anyone?</h1>
    <%=  link_to 'Add a new shop' , new_shop_path, class: "btn btn-info" %>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @shops.each do |shop| %>
      <div class="col-md-4">
        <%= link_to shop_path(shop) do%>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/12b08d73864367.5c181884c118e.jpg)">
            <h2><%= shop.name %></h2>
          </div>
        <%end%>
      </div>
    <% end %>
  </div>
</div>
